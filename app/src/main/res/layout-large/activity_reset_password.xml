<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#042f4b"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResetPasswordActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/ic_gmail">
    </ImageView>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColorHint="@color/colorText"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_gmail_small"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorText"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/enter_your_gmail"
        />


    <!-- Login Button -->

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:background="@drawable/button_login_selector"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="@string/send"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:visibility="visible"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_login_corner"
        android:layout_gravity="center"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</LinearLayout>