<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"
        android:elevation="12dp"
        app:cardBackgroundColor="#042f4b"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:id="@+id/linearData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_recyclerView_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_young"
                android:drawablePadding="15dp"
                android:text="@string/user_name"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_recyclerView_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_placeholder"
                android:drawablePadding="15dp"
                android:text="@string/user_address"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_delete_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_insert_show_data"
                android:padding="15dp"
                android:text="@string/delete_data"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>