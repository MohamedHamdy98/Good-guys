<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#042f4b"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/ic_volunteer_login"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextGmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/ic_gmail_small"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_your_gmail"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:gravity="left"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="18sp"
                    android:textStyle="bold"></EditText>

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/ic_key"
                    android:drawablePadding="10dp"
                    android:gravity="left"
                    android:hint="@string/enter_your_password"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="18sp"
                    android:textStyle="bold"></EditText>

                <Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/button_login_selector"
                    android:padding="10dp"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/button_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/button_login_corner"
                android:padding="10dp"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvforgetmypassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center"
                android:text="@string/click_here_if_you_forgot_your_password"
                android:textColor="@color/colorText"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>